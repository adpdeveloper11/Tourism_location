<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell_3421.tourism_location.MainActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="49dp"

                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="8dp"
                android:hint="ค้นหา"
                app:layout_constraintHorizontal_bias="0.294"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/cardview_light_background"
                android:drawableTop="@drawable/ic_dashboard_black_24dp"
                android:text="\nButton1"
                tools:layout_editor_absoluteY="72dp"
                android:id="@+id/button4"
                android:layout_marginLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent" />
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/cardview_light_background"
                android:drawableTop="@drawable/ic_dashboard_black_24dp"
                android:text="\nButton1"
                tools:layout_editor_absoluteY="72dp"
                app:layout_constraintLeft_toRightOf="@+id/button4"
                android:layout_marginLeft="8dp"
                android:id="@+id/button5" />
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/cardview_light_background"
                android:drawableTop="@drawable/ic_dashboard_black_24dp"
                android:text="\nButton1"
                tools:layout_editor_absoluteY="72dp"
                app:layout_constraintLeft_toRightOf="@+id/button5"
                android:layout_marginLeft="16dp"
                android:id="@+id/button6" />
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/cardview_light_background"
                android:drawableTop="@drawable/ic_dashboard_black_24dp"
                android:text="\nButton1"
                tools:layout_editor_absoluteY="72dp"

                app:layout_constraintLeft_toRightOf="@+id/button6"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />




            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="26dp"
                android:text="สถานที่ยอดนิยม"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="115dp"
                app:layout_constraintTop_toBottomOf="@+id/editText" />


            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="352dp"
                android:layout_height="197dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="9dp"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:drawableTop="@drawable/ic_dashboard_black_24dp"
                        android:text="\nButton1" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:drawableTop="@drawable/ic_dashboard_black_24dp"
                        android:text="\nButton2" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:drawableTop="@drawable/ic_dashboard_black_24dp"
                        android:text="\nButton3" />

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:drawableTop="@drawable/ic_dashboard_black_24dp"
                        android:text="\nButton4" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:drawableTop="@drawable/ic_dashboard_black_24dp"
                        android:text="\nButton5" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:drawableTop="@drawable/ic_dashboard_black_24dp"
                        android:text="\nButton6" />
                </LinearLayout>

            </HorizontalScrollView>


        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        app:itemTextColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/background_bottomenu"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
